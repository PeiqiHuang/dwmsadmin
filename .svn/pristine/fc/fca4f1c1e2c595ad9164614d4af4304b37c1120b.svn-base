<div class="modal fade" id="entity-add" data-keyboard="false" data-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title pull-left" id="entity-add-modal-title">新增章节</h3>
            </div>
            <div class="modal-body">
                <form id="entity-add-form">
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
									章节名称：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="chapterTitle" class="form-control">
                                    <input type="text" name="chapterId" hidden>
                                    <input type="text" name="courseId" hidden th:value="${courseId}">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	章节序号：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="chapterNo" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	内容：
					            </span>
                                <div class="form-group">
                                    <textarea class="form-control" rows="5" name="content"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	章节时长（分钟）：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="timeLength" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group" style="margin-top:10px;">
                                <span class="input-group-addon">
                                                                                                                      章节类型：
                                 </span>
                                <div class="toggle-switch">
                                    <input type="checkbox" id="typeCheck" class="toggle-switch__checkbox">
                                    <input type="text" name="chapterType" hidden class="form-control" value="1">
                                    <i class="toggle-switch__helper"></i>
                                </div>
                                <span class="input-group-addon" id="typeLabel" style="margin-left: 10px;">
                                                                                                                      章
                               </span>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="parent" hidden>
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon" style="justify-content: flex-start;margin-top: .5rem;">
					               	所属章：
					             </span>
                                <div class="form-group">
                                    <div id="entityTree"></div>
                                </div>
                                <input type="hidden" name="parentId">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-save" id="entity-add-button" name="save">保存</button>
                <button type="button" class="btn btn-secondary btn-close">关闭</button>
                <button class="btn-hide"></button>
            </div>
        </div>
    </div>
</div>
<script data-th-src="@{js/app/course/chapter/chapterAdd.js}"></script>