<div class="modal fade" id="entity-add" data-keyboard="false" data-backdrop="static" ><!-- tabindex="-1" 去掉，否则日期控件不能选择年月下拉 -->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title pull-left" id="entity-add-modal-title">新增缴费</h3>
            </div>
            <div class="modal-body">
                <form id="entity-add-form">
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 缴费标题：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control">
                                    <input type="text" hidden name="dueId" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 缴费说明：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="dueDesc" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group" style="margin-top:10px;">
                                <span class="input-group-addon">
					               	缴费项目：
					             </span>
                                <div class="toggle-switch">
                                    <input type="checkbox" id="dueItemCheck" class="toggle-switch__checkbox">
                                    <input type="text" name="dueItem" hidden class="form-control" value="1">
                                    <i class="toggle-switch__helper"></i>
                                </div>
                                <span class="input-group-addon" id="dueItemLabel" style="margin-left: 10px;">
	                                 	党费
						             </span>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="dueType" hidden>
                        <div class="col-sm-11">
                            <div class="input-group" style="margin-top:10px;">
                                <span class="input-group-addon">
					               	缴费类型：
					             </span>
                                <div class="toggle-switch">
                                    <input type="checkbox" id="dueTypeCheck" class="toggle-switch__checkbox">
                                    <input type="text" name="dueType" hidden class="form-control" value="1">
                                    <i class="toggle-switch__helper"></i>
                                </div>
                                <span class="input-group-addon" id="dueTypeLabel" style="margin-left: 10px;">
	                                 	固定金额
						             </span>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="due">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 缴费金额：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="due" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	截止时间：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="endTime" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="status">
                        <div class="col-sm-11">
                            <div class="input-group" style="margin-top:10px;">
                                <span class="input-group-addon">
					               	状态：
					             </span>
                                <div class="form-group">
                                    <label class="custom-control custom-radio">
                                        <input name="status" type="radio" value="-1" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">已取消</span>
                                    </label>
                                    <label class="custom-control custom-radio">
                                        <input name="status" type="radio" value="0" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">待发布</span>
                                    </label>
                                    <label class="custom-control custom-radio">
                                        <input name="status" type="radio" value="1" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">发布</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="party" class="row"  th:if="${isAdmin}">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon" style="justify-content: flex-start;margin-top: .5rem;">
					               	党支部：
					             </span>
                                <div class="form-group">
                                    <div id="partyTree"></div>
                                </div>
                                <input type="hidden" name="partyId">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 缴费人员：
					             </span>
                                <div class="form-group">
                                    <select multiple="multiple" name="usersSelect"></select>
                                    <input name="users" hidden/>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-save" id="entity-add-button" name="save">保存</button>
                <button type="button" class="btn btn-secondary btn-close">关闭</button>
                <button class="btn-hide"></button>
            </div>
        </div>
    </div>
</div>
<script data-th-src="@{js/app/common/PartySelect.js}"></script>
<script data-th-src="@{js/app/common/party.js}"></script>
<script data-th-src="@{js/app/due/dueAdd.js}"></script>