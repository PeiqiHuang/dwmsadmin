<div class="modal fade" id="entity-add" data-keyboard="false" data-backdrop="static" ><!-- tabindex="-1" 去掉，否则日期控件不能选择年月下拉 -->
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title pull-left" id="entity-add-modal-title">新增党课</h3>
            </div>
            <div class="modal-body">
                <form id="entity-add-form" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 党课主题：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="courseName" class="form-control">
                                    <input type="text" hidden name="courseId" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 封面：
					            </span>
                                <div class="form-group">
                                	<img src="" class="img-responsive" style="max-height:200px;max-width:200px;" id="coverImg">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 上传新封面：
					            </span>
                                <div class="form-group">
                                    <input name="img" type="file" >
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 文件：
					            </span>
                                <div class="form-group">
                                	<a href="" id="courseFile" target="_blank"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 上传新文件：
					            </span>
                                <div class="form-group">
                                    <input name="file" type="file" >
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	 党课简介：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="courseDesc" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon" style="justify-content: flex-start;margin-top: .5rem;">
					               	总课时：
					             </span>
                                <div class="form-group">
                                    <input type="text" name="chapterNum" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	结束时间：
					            </span>
                                <div class="form-group">
                                    <input type="text" name="endTime" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group" style="margin-top:10px;">
                                <span class="input-group-addon">
					               	状态：
					             </span>
                                <div class="form-group">
                                    <label class="custom-control custom-radio">
                                        <input name="status" type="radio" value="-1" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">已取消</span>
                                    </label>
                                    <label class="custom-control custom-radio">
                                        <input name="status" type="radio" value="0" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">待发布</span>
                                    </label>
                                    <label class="custom-control custom-radio">
                                        <input name="status" type="radio" value="1" class="custom-control-input">
                                        <span class="custom-control-indicator"></span>
                                        <span class="custom-control-description">发布</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group" style="margin-top:10px;">
                                <span class="input-group-addon">
                                                                                                                 类型：
                                 </span>
                                <div class="toggle-switch">
                                    <input type="checkbox" id="courseTypeCheck" class="toggle-switch__checkbox">
                                    <input type="text" name="courseType" hidden class="form-control" value="0">
                                    <i class="toggle-switch__helper"></i>
                                </div>
                                <span class="input-group-addon" id="courseTypeLabel" style="margin-left: 10px;">
                                                                                                                 选修
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	学习党员：
					             </span>
                                <div class="form-group">
                                    <select multiple="multiple" name="usersSelect"></select>
                                    <input name="users" hidden/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="party" class="row"  th:if="${isAdmin}">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon" style="justify-content: flex-start;margin-top: .5rem;">
					               	党支部：
					             </span>
                                <div class="form-group">
                                    <div id="partyTree"></div>
                                </div>
                                <input type="hidden" name="partyId">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-11">
                            <div class="input-group">
                                <span class="input-group-addon">
					               	分类：
					             </span>
                                <div class="form-group">
                                    <select name="categoryId" class="form-control">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-save" id="entity-add-button" name="save">保存</button>
                <button type="button" class="btn btn-secondary btn-close">关闭</button>
                <button class="btn-hide"></button>
            </div>
        </div>
    </div>
</div>
<script data-th-src="@{js/app/common/party.js}"></script>
<script data-th-src="@{js/app/common/user.js}"></script>
<script data-th-src="@{js/app/course/courseAdd.js}"></script>